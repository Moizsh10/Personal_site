:root {
	--header-image: url('https://dappercat.neocities.org/media/DapperCats_Corner_Logo_alpha_V2.png');
	--body-bg-wave: url('https://dappercat.neocities.org/media/wave_loop.gif');
	--body-bg-image-alt: url('https://sadhost.neocities.org/images/tiles/purplesky.gif');
	
	/*colors*/
	--sky-blue: #8cc8e3;
	--gunmetal-blue: #103242;
	--link-blue: #0066cc;
	--alice-blue: #DEEFF7;
}

@font-face {
    font-family: montserrat-font;
    src: url('https://dappercat.neocities.org/Fonts/MontserratRegular-BWBEl.ttf');
}

@font-face {
    font-family: montserrat-font;
    src: url('https://dappercat.neocities.org/Fonts/MontserratBold-p781R.otf');
    font-weight: bold;
}

@font-face {
    font-family: montserrat-font;
    src: url('https://dappercat.neocities.org/Fonts/MontserratItalic-5187x.otf');
    font-style: italic;
}

@font-face {
    font-family: montserrat-font;
    src: url('https://dappercat.neocities.org/Fonts/MontserratBoldItalic-4B3w9.ttf');
    font-style: italic;
    font-weight: bold;
}

body {
  font-family: 'montserrat-font', sans-serif;
	margin: 0;
	background-color: #08031A;
	background-size: 90px;
	color: var(--alice-blue);
	background-image: var(--body-bg-wave);
}

            * {
                box-sizing: border-box;
            }

#container {
	/*width of the content, is used for the % sizes in other style properties that are nested within this tag in the HTML document*/
	max-width: 1000px;
	margin: 0 auto;
}

#container a {
	font-weight: bold;
}

#container a:link {
	color: var(--link-blue);
}

#container a:visited{
	color: var(--link-blue);
}

#header {
	width: 100%;
	/* header color here! */
	background-color: var(--sky-blue);
	height: 200px;
	background-image: var(--header-image);
	background-size: 100%;
}

#navbar {
	height: 50px;
	width: 100%;
	background-color: var(--gunmetal-blue);
	position: sticky;
	top: 0px;

}

#navbar ul {
	display: flex;
	height: 50px;
	margin: 0;
	padding: 0;
	list-style-type: none;
	justify-content: space-evenly;
}

#navbar li {
	padding: 15px;
}

#navbar a {
	text-decoration: none;
}

#navbar a:hover{
	text-decoration: underline;
}

#navbar li:hover{
	background-color: blue;
}

#flex {
	display: flex;
}

aside {
	background-color: blue;
	width: 150px;
	padding: 20px;
	font-size: smaller;	
}

main {
	background-color: var(--sky-blue);
	flex: 1;
	padding: 20px;
	order: 2;
	color: black;
}

.poetry{
	width: 100%;
	height: 50px;
	align-content: center;
	padding: 5px 5px 5px 20px;
	color: white;
	background-color: var(--gunmetal-blue);
	text-decoration: underline;
}

#float-text {
	width: 100%;
}

#float-image {
	float: left;
	width: 200;
}

#float-image img {
	margin: 10px 25px 10px 10px;
	max-width: 200px;
	border: 5px solid var(--gunmetal-blue);
}

.gallery{
	display: inline-block;
	border: 1px solid grey;
	margin: 5px;
	width: 200px;
}

.gallery .description{
	padding: 10px;
	text-align: center;
}

.gallery:hover{
	border: 1px solid black;
}

.gallery img {
	width: 100%;
	height: auto;
}

#leftSidebar {
	order: 1;
}

#leftSidebar h2{
	margin: 0;
	padding: 0;
}

#sidebarNav ul {
	list-style-type: none;
	margin: 0;
	padding: 0;
	width: 110px;
}

#sidebarNav li {	
	padding: 5px;
	margin: 5px 0;
	background-color: var(--gunmetal-blue);
}

#sidebarNav li a {
	text-decoration: none;
}

#sidebarNav li a:hover{
	text-decoration: underline;
}

#rightSidebar {
	order: 3;
}

#thumbnail-container {
	display: flex;
	flex-flow: row wrap;
	justify-content: space-around;
	align-items: center;
	width: 100%;
	margin-bottom: 50px;
}

.thumbnail {
	text-align: center;
	align-content: center;
	margin: 20px;
	padding: 10px;
	width: 300px;
	height: 300px;
	background-position: center;
	border: 10px solid var(--gunmetal-blue);
}

.thumbnail h1 a{
	text-decoration: none;
  color: white !important; 
	-webkit-text-stroke: 1px black;
}

.thumbnail h1 a:hover{
	text-decoration: underline;
}

.thumbnail img{
  max-width: 100%; 
}

#footer {
	height: 70px;
	width: 100%;
	box-sizing: border-box;
	padding: 5px;
	align-content: center;
	background-color: var(--gunmetal-blue);
}

#footer ul {
	display: flex;
	margin: 0;
	padding: 0;
	list-style-type: none;
	justify-content: space-evenly;
}

#footer li {
	text-decoration: none;
	padding: 5px;
}

#footer li img {
	max-height: 50px; 

}

/* BELOW THIS POINT IS MEDIA QUERY */

            /* so you wanna change the width of your page? 
    by default, the container width is 1000px.
    in order to keep things responsive, take your new height,
    and then subtrack it by 100. use this new number as the 
    "max-width" value below
    */

            @media screen and (max-width: 800px) {
                #flex {
                    flex-wrap: wrap;
                }
				

                aside {
                    width: 100%;
                }

                /* the order of the items is adjusted here for responsiveness!
      since the sidebars would be too small on a mobile device.
      feel free to play around with the order!
      */
                main {
                    order: 1;
                }

                #leftSidebar {
                    order: 2;
                }

                #rightSidebar {
                    order: 3;
                }
                
                #navbar {
                    flex-wrap: wrap;
                    width: 100%;
                    height: 100px;
                }

                #navbar ul {
                    flex-wrap: wrap;
                }
            }
