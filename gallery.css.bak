
.gallery-container
{
	display: inline-flex;
	flex-wrap: wrap;
	justify-content: center;
	align-content: center;
}

.gallery{
	/*display: inline-block;*/
	margin: 20px;
	width: 200px;
	height: auto;
}

#gallery-header{
	width: 60%;
	height: auto;
	margin: 0 20%;
	outline-style:ridge;
	outline-width:10px;
	outline-color:#AD6A6C;
}

.gallery .description{
	border: 5px ridge grey;
	padding: 10px;
	text-align: center;
}

/* .gallery:hover{ */
	/* border: 1px solid black; */
/* } */

.gallery img {
	width: 100%;
	height: auto;
}

.gallery img:hover{
	border: 1px solid black;
}
