html,
body,
svg {
	height: 100%;
	width: 100%;
}

polygon {
	height: 100%;
}

.proj-container{
	position: relative;
	/*background-color: green;*/
	display: flex;
	flex-direction: column;
	height: 1000px;
	/*margin-bottom: 5%;*/
	margin: 0 5% 5% 5%;
	
}


.polygon-bg {
	position: absolute;
	top: 0px;
	left: 0px;
	right: 0px;
	bottom: 0px;
	width: 900px;
	height: 100%;
	z-index:-3;
}


.polygon-title {
	color: white;
	position: relative;
	text-align: center;
	width: 300px;
	height: 50px;
	margin: 20px 30px 10px 8px;
	font-size: 25px;
}

.polygon-body {
	color: white;
	max-width: 800px;
	margin: 10px 15px 10px 50px;
	padding: 0px;
	overflow:hidden;
}

.demo{
 	  width: 640px;
	  height: auto; 
	  margin: 0 50px 0 25px;
}

.shadow-wrap {
  filter: drop-shadow(1px 5px 5px black);
}