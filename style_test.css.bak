:root {
	--header-image: url('https://dappercat.neocities.org/media/DapperCats_Corner_Logo_alpha_V2.png');
	--body-bg-wave: url('https://dappercat.neocities.org/media/wave_loop.gif');
	--body-bg-image-alt: url('https://sadhost.neocities.org/images/tiles/purplesky.gif');
	
	/*colors*/
	--sky-blue: #8cc8e3;
	--main-border-color: #4AA8D3;
	--gunmetal-blue: #103242;
	--navbar-text: #f0f0f0;
	--alice-blue: #DEEFF7;
	--cerulean: #477998;
}

@font-face {
    font-family: montserrat-font;
    src: url('https://dappercat.neocities.org/Fonts/MontserratRegular-BWBEl.ttf');
}

@font-face {
    font-family: montserrat-font;
    src: url('https://dappercat.neocities.org/Fonts/MontserratBold-p781R.otf');
    font-weight: bold;
}

@font-face {
    font-family: montserrat-font;
    src: url('https://dappercat.neocities.org/Fonts/MontserratItalic-5187x.otf');
    font-style: italic;
}

@font-face {
    font-family: montserrat-font;
    src: url('https://dappercat.neocities.org/Fonts/MontserratBoldItalic-4B3w9.ttf');
    font-style: italic;
    font-weight: bold;
}

body {
  font-family: 'montserrat-font', sans-serif;
	margin: 0;
	background-color: #0D2530;
	background-size: 90px;
	/* color: var(--sky-blue); */
	/* background-image: var(--body-bg-wave); */
}

            * {
                box-sizing: border-box;
            }

#container {
	/*width of the content, is used for the % sizes in other style properties that are nested within this tag in the HTML document*/
	max-width: 1200px;
	margin: 0 auto;
	position: relative;
	z-index: 1;
	width:100%;

}

#container a {
	font-weight: bold;
}

#container a:link {
	color: #FFCF56;
}

#container a:visited{
	color: #FFCF56;
}

#header {
	width: 100%;
	/* header color here! */
	background-color: var(--sky-blue);
	height: 200px;
	background-image: var(--header-image);
	background-position: center;
	background-size: contain;
	background-repeat: no-repeat;
}

#navbar {
	height: 50px;
	width: 100%;
	background-color: #103E54;
	position: sticky;
	top: 0px;
	z-index: 0;

}

#navbar ul {
	display: flex;
	height: 50px;
	margin: 0;
	padding: 0;
	list-style-type: none;
	justify-content: space-evenly;

}

#navbar li {
	padding: 15px;

}

#navbar a {
	text-decoration: none;
}

#navbar a:hover{
	text-decoration: underline;
}

#flex {
	display: flex;
}

aside {
	background-color: blue;
	width: 150px;
	padding: 20px;
	font-size: smaller;	
}

main {
	background-color: var(--sky-blue);
	flex: 1;
	padding: 20px;
	order: 2;
	color: #103E54;
	border: 10px groove #103E54;
	outline: 5px solid #FFCF56;
	position: relative;
	z-index: 1;
}

#float-text {
	width: 100%;
}

#float-image {
	float: left;
	width: 200;
}

#float-image img {
	margin: 10px 25px 10px 10px;
	max-width: 200px;
}

#thumbnail-container {
	display: flex;
	flex-flow: row wrap;
	justify-content: space-around;
	align-items: center;
	width: 100%;
	margin-bottom: 50px;
}

.thumbnail {
	text-align: center;
	align-content: center;
	margin: 20px;
	padding: 10px;
	width: 300px;
	height: 300px;
	background-position: center;
	border: 10px ridge var(--cerulean);
}

.thumbnail h1 a{
	text-decoration: none;
  color: white !important; 
	-webkit-text-stroke: 1px black;
}

.thumbnail h1 a:hover{
	text-decoration: underline;
}

.thumbnail img{
  max-width: 100%; 
}

#footer {
	height: 70px;
	width: 100%;
	box-sizing: border-box;
	padding: 5px;
	align-content: center;
	background-color: #103E54;
}

#footer ul {
	display: flex;
	margin: 0;
	padding: 0;
	list-style-type: none;
	justify-content: space-evenly;
}

#footer li {
	text-decoration: none;
	padding: 5px;
}

#footer li img {
	max-height: 50px; 

}

/* BELOW THIS POINT IS MEDIA QUERY */

            /* so you wanna change the width of your page? 
    by default, the container width is 1000px.
    in order to keep things responsive, take your new height,
    and then subtrack it by 100. use this new number as the 
    "max-width" value below
    */

            @media screen and (max-width: 800px) {
				/*Maintain an aspect ratio of 16:9, the total percentage should be 56.25 for that (9/16)*/
				#container{
					padding-top: 28.13%;
					padding-bottom: 28.13%;
					min-width: 900px;
				}
				
                #flex {
                    flex-wrap: nowrap;
					flex-direction: column;
					flex: 1 0 auto;
                }
				

                aside {
                    width: 100%;
                }

                /* the order of the items is adjusted here for responsiveness!
      since the sidebars would be too small on a mobile device.
      feel free to play around with the order!
      */
                main {
                    order: 1;
                }

                #leftSidebar {
                    order: 2;
                }

                #rightSidebar {
                    order: 3;
                }
                
                #navbar {
                    flex-wrap: wrap;
                    width: 100%;
                    height: 50px;
                }

                #navbar ul {
                    flex-wrap: wrap;
                }
            }
